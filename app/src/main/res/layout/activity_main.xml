<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/textVIewTest"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:textSize="18sp"
       android:text="@string/DegaultText"
       app:layout_constraintTop_toTopOf="parent"
       android:textColor="@color/black"
       app:layout_constraintStart_toEndOf="parent"/>

   <Button
      android:id="@+id/btnPlusWord"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
     app:layout_constraintTop_toBottomOf="@id/textVIewTest"
      android:text="@string/PlusWord"/>

   <EditText
      android:id="@+id/etSlovo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/btnPlusWord"
      android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
